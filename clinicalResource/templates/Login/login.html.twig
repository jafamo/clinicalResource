{% extends 'home/home.html.twig' %}

{% block text %}
    <div class="container section-title">
        <h2>Login</h2>
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="php-email-form">
        <form action="{{ path('app_login') }}" method="post">
            <div class="container">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" class="form-control input_login_register"
                       value="{{ last_username }}" required>
                <label for="password">Password:</label>
                <input type="password" id="password" class="form-control input_login_register" name="_password" required>
                {#                         If you want to control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/home">
                <div class="col-md-12">
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                           value="{{ csrf_token('authenticate') }}">
                </div>
                <br>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-lg btn-primary col-md-12 text-center">login</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}