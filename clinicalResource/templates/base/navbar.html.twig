{% block navbar %}
    <header id="header" class="header d-flex align-items-center fixed-top">
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <title>Medical Center</title>
        <meta name="description" content="">
        <meta name="keywords" content="">

        <!-- Favicons -->
        <link href="{{ asset('img/favicon.png') }}" rel="icon">
        <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com" rel="preconnect">
        <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
              rel="stylesheet">

        <div class="container-fluid container-xl position-relative d-flex align-items-center">
            <a href="{{ path('app_home') }}" class="logo d-flex align-items-center me-auto">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="{{ asset('img/logo.png') }}" alt="">
                <h1 class="sitename">Medical Center</h1>
            </a>
            <!-- NAVBAR MENU -->
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="{{ path('app_home') }}" class="active">Home</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_search') }}">Search</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown"><a href="#"><span>Admin</span> <i
                                            class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a href="{{ path('admin_dashboard') }}">AdminPanel</a></li>
                                    <li class="dropdown"><a href="#"><span>CSV</span> <i
                                                    class="bi bi-chevron-down toggle-dropdown"></i></a>
                                        <ul>
                                            <li><a href="{{ path('app_csv_load') }}">Import CSV</a></li>
                                            <li><a href="#">Export CSV</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="{{ base_url_api }}">API doc</a></li>

                                </ul>
                            </li>
                        {% endif %}
                        <li><a href="{{ path('app_logout') }}">Logout</a></li>
                        <li>{{ app.user.email }}</li>
                        <img
                                src="{{ asset('img/favicon.png') }}"
                                alt="{{ app.user.email }}"
                                width="20" height="20"
                        />
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Login</a></li>
                        <li><a href="{{ path('app_register') }}">Register</a></li>
                        {#                        <li><a href="{{ path('security_login') }}">Admin Login</a></li> #}

                    {% endif %}


                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            {#            <a class="cta-btn" href="#about">Get Started</a> #}
        </div>
    </header>
{% endblock %}